
  
<div class="container">
  <h1><%= @place["name"] %></h1>

    <p>
      <a class= "btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
    </p>
  <div class="row">
    <% if @current_user %>
      <% for post in @posts %>
        <div class="col-md-4">
          <h4><%= post["title"] %></h4>
          <h5><%= post["posted_on"] %></h5>
          <% if post.uploaded_image.attached? %>
            <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
          <% else %>
            <img src="<%= post["image"] %>" class="img-fluid">
          <% end %>
          <p><%= post["description"] %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  
</div>

