
<div class="container">
    <div class="pb-3">
      <h3>New post</h3>
    </div>
      <% if @current_user %>
        <%= form_with :model => @post do |form| %>
          <div class="pb-4">
            <%= form.label "title" %>
            <%= form.text_field "title" %>
          </div>
          <div class="pb-4">
          <%= form.label "uploaded_image"%>
          <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif"%>
          </div>
          <div class="pb-4">
            <%= form.label "description" %>
            <%= form.text_field "description" %>
          </div>
          <div class="pb-4">
            <%= form.label "posted_on" %>
            <%= form.date_field "posted_on" %>
          </div>
          <div class="pb-4">
            <%= form.submit "Create Post", :class => "btn btn-primary" %>
          </div>
          <%= form.hidden_field "place_id" %>
        <% end %>
      <% end %>
</div>